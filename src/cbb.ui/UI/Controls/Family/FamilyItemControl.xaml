<UserControl x:Class="cbb.ui.FamilyItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cbb.ui"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid Background="LightGray">
        <Button Background="Transparent" Command="{Binding InsertFamily, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions> 
                
                <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="12" />
                <TextBlock Grid.Row="1" Text="{Binding FullPath}" FontSize="9" />
            </Grid>
        </Button>
    </Grid>
</UserControl>
